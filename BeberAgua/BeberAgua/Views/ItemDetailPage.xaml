<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeberAgua.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nome:" FontSize="Medium" />
        <Label Text="{Binding Nome}" FontSize="Small"/>
        <Label Text="Espécie:" FontSize="Medium" />
        <Label Text="{Binding Especie}" FontSize="Small"/>
        <Label Text="Idade(real):" FontSize="Medium" />
        <Label Text="{Binding Idade}" FontSize="Small" />
    </StackLayout>
    
</ContentPage>