<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeberAgua.Views.InfoPessoaPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <!-- Entradas de texto para informações pessoais -->
        <Entry x:Name="nomeEntry" Placeholder="Nome" />
        <Entry x:Name="idadeEntry" Placeholder="Idade" />
        <Entry x:Name="pesoEntry" Placeholder="Peso" />

        <!-- Botão para salvar as edições -->
        <Button Text="Guardar Edições" Clicked="OnSaveEdicaoClicked" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>